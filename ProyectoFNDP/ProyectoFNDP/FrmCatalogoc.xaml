<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFNDP.FrmCatalogoc"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Catalogo" HorizontalTextAlignment="Center" TextColor="Black"
         FontSize="25" ></Label>

            <Entry x:Name="txtidpadre"  Placeholder="Codigo: "></Entry>
            <Entry x:Name="txtidhijo"  Placeholder="Codigo: "></Entry>
            <Entry x:Name="txtnombre"  Placeholder="Nombre: "></Entry>
            <Entry x:Name="txtvalor"  Placeholder="Valor: "></Entry>
            <Entry x:Name="txtestado"  Placeholder="Estado: "></Entry>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Text="Insertar dato" x:Name="btnguardar" Clicked="btnGuardar_Clicked"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Regresar" x:Name="btnRegresar" Clicked="btnRegresar_Clicked"/>


            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>