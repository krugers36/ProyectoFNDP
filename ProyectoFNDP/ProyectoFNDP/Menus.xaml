<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFNDP.Menus"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUser" ></Label>
            <Label Text="Menu" HorizontalTextAlignment="Center" TextColor="Black"
         FontSize="25" ></Label>

            <Button x:Name="btnpersona" Text="Registro Persona" Clicked="btnpersona_Clicked"></Button>
            <Button x:Name="btnficha" Text="Ficha Medica" Clicked="btnficha_Clicked"></Button>
            <Button x:Name="btncatalogo" Text="Catalogo" Clicked="btncatalogo_Clicked"></Button>
            

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                
                <Button Grid.Row="0" Grid.Column="1" Text="Salir" x:Name="btnSalir" Clicked="btnSalir_Clicked"/>



            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>